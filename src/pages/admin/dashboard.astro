---
// Vérifier l'authentification côté serveur
const sessionCookie = Astro.cookies.get('admin_session');

let isAuthenticated = false;
if (sessionCookie) {
  try {
    const sessionData = JSON.parse(sessionCookie.value);
    // Vérifier que la session n'est pas expirée (24h)
    const loginTime = new Date(sessionData.loginTime);
    const now = new Date();
    const hoursDiff = (now.getTime() - loginTime.getTime()) / (1000 * 60 * 60);
    isAuthenticated = hoursDiff < 24 && sessionData.is_active;
  } catch (error) {
    isAuthenticated = false;
  }
}

if (!isAuthenticated) {
  return Astro.redirect('/admin/login');
}

import { ArticleForm } from '../../components/admin/ArticleForm';
import { ArticleList } from '../../components/admin/ArticleList';
import AdminLayout from '../../layouts/AdminLayout.astro';

import { supabase } from '../../lib/supabase';

// Récupérer les données
const { data: articles } = await supabase
  .from('articles')
  .select(`
    id, title, slug, excerpt, content, status, created_at, updated_at,
    cover_image_path, cover_image_alt,
    article_categories(category_id, category:categories(id, name, slug)),
    sources(name, url, type)
  `)
  .order('created_at', { ascending: false });

const { data: categories } = await supabase
  .from('categories')
  .select('*')
  .order('name');

// Onglet actif (défaut: valider)
const activeTab = Astro.url.searchParams.get('tab') || 'validate';

// Statistiques
const stats = {
  pending: articles?.filter(a => a.status === 'pending').length || 0,
  approved: articles?.filter(a => a.status === 'approved').length || 0,
  rejected: articles?.filter(a => a.status === 'rejected').length || 0,
  total: articles?.length || 0
};
---

<AdminLayout title="Dashboard Administration">
  <!-- Statistiques -->
  <div class="mt-8 grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <div class="bg-slate-800/50 dark:bg-slate-800/70 backdrop-blur-sm border border-slate-700/50 rounded-lg p-6 shadow-lg">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-slate-300 dark:text-slate-400 text-sm">Total articles</p>
          <p class="text-2xl font-bold text-white dark:text-white">{stats.total}</p>
        </div>
        <div class="w-12 h-12 bg-blue-500/20 dark:bg-blue-900/30 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-blue-400 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-slate-800/50 dark:bg-slate-800/70 backdrop-blur-sm border border-slate-700/50 rounded-lg p-6 shadow-lg">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-slate-300 dark:text-slate-400 text-sm">En attente</p>
          <p class="text-2xl font-bold text-yellow-400 dark:text-yellow-400">{stats.pending}</p>
        </div>
        <div class="w-12 h-12 bg-yellow-500/20 dark:bg-yellow-900/30 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-yellow-400 dark:text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-slate-800/50 dark:bg-slate-800/70 backdrop-blur-sm border border-slate-700/50 rounded-lg p-6 shadow-lg">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-slate-300 dark:text-slate-400 text-sm">Approuvés</p>
          <p class="text-2xl font-bold text-green-400 dark:text-green-400">{stats.approved}</p>
        </div>
        <div class="w-12 h-12 bg-green-500/20 dark:bg-green-900/30 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-green-400 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-slate-800/50 dark:bg-slate-800/70 backdrop-blur-sm border border-slate-700/50 rounded-lg p-6 shadow-lg">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-slate-300 dark:text-slate-400 text-sm">Rejetés</p>
          <p class="text-2xl font-bold text-red-400 dark:text-red-400">{stats.rejected}</p>
        </div>
        <div class="w-12 h-12 bg-red-500/20 dark:bg-red-900/30 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-red-400 dark:text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Onglets -->
  <div class="bg-slate-800/50 dark:bg-slate-800/70 backdrop-blur-sm border border-slate-700/50 rounded-lg shadow-lg">
    <div class="border-b border-slate-600/50 dark:border-slate-700/50">
      <nav class="flex">
        <a
          href="/admin/dashboard?tab=validate"
          class={`px-6 py-4 text-sm font-medium border-b-2 transition-colors ${
            activeTab === 'validate'
              ? 'border-indigo-400 text-indigo-400'
              : 'border-transparent text-slate-300 dark:text-slate-400 hover:text-white dark:hover:text-slate-300'
          }`}
        >
          Valider articles ({stats.pending})
        </a>
        <a
          href="/admin/dashboard?tab=create"
          class={`px-6 py-4 text-sm font-medium border-b-2 transition-colors ${
            activeTab === 'create'
              ? 'border-indigo-400 text-indigo-400'
              : 'border-transparent text-slate-300 dark:text-slate-400 hover:text-white dark:hover:text-slate-300'
          }`}
        >
          Ajouter article
        </a>
      </nav>
    </div>

    <div class="p-6">
      {activeTab === 'validate' ? (
        <ArticleList articles={articles || []} categories={categories || []} client:only="react" />
      ) : (
        <ArticleForm categories={categories || []} client:only="react" />
      )}
    </div>
  </div>
</AdminLayout>