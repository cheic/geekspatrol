---
// Test de connexion Supabase côté serveur
import { supabase } from '../../lib/supabase';

interface TestResult {
  success: boolean;
  message: string;
  data?: any[];
  dataLength?: number;
  details?: any;
}

let testResult: TestResult | null = null;

try {
  // Test simple : vérifier la connexion
  const { data, error } = await supabase.from('articles').select('*').limit(1);

  if (error) {
    testResult = {
      success: false,
      message: `Erreur Supabase: ${error.message}`,
      details: error
    };
  } else {
    testResult = {
      success: true,
      message: 'Connexion Supabase réussie !',
      data: data,
      dataLength: data?.length || 0
    };
  }
} catch (err) {
  testResult = {
    success: false,
    message: `Exception: ${(err as Error).message}`,
    details: err
  };
}
---

<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Test Supabase - Geeks Patrol</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/src/styles/global.css">
</head>
<body class="min-h-screen p-8" style="background: var(--bg-gradient); color: var(--text-primary);">
  <div class="max-w-4xl mx-auto">
    <div class="mb-8">
      <h1 class="text-3xl font-bold mb-2" style="color: var(--text-primary);">Test de Connexion Supabase</h1>
      <p class="text-lg" style="color: var(--text-secondary);">Vérification de la connexion à votre base de données Supabase</p>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 border border-gray-200 dark:border-gray-700">
      <div class="mb-4">
        <h2 class="text-xl font-semibold mb-2" style="color: var(--text-primary);">Configuration</h2>
        <div class="bg-gray-50 dark:bg-gray-900 p-4 rounded border">
          <p class="text-sm" style="color: var(--text-secondary);">
            <strong>URL Supabase:</strong> {import.meta.env.PUBLIC_SUPABASE_URL}<br>
            <strong>Clé anonyme:</strong> {import.meta.env.PUBLIC_SUPABASE_ANON_KEY ? '✅ Configurée' : '❌ Manquante'}
          </p>
        </div>
      </div>

      <div class="mb-4">
        <h2 class="text-xl font-semibold mb-2" style="color: var(--text-primary);">Résultat du Test</h2>
        <div class={`p-4 rounded border ${testResult?.success ? 'bg-green-50 dark:bg-green-900 border-green-200 dark:border-green-700' : 'bg-red-50 dark:bg-red-900 border-red-200 dark:border-red-700'}`}>
          <div class="flex items-center mb-2">
            <span class="text-2xl mr-2">{testResult?.success ? '✅' : '❌'}</span>
            <span class="font-semibold" style="color: var(--text-primary);">{testResult?.message}</span>
          </div>

          {testResult?.data && (
            <div class="mt-4">
              <h3 class="font-semibold mb-2" style="color: var(--text-primary);">Données récupérées ({testResult.dataLength} ligne{testResult.dataLength !== 1 ? 's' : ''})</h3>
              <pre class="bg-gray-100 dark:bg-gray-800 p-3 rounded text-sm overflow-x-auto" style="color: var(--text-primary);">{JSON.stringify(testResult.data, null, 2)}</pre>
            </div>
          )}

          {testResult?.details && !testResult.success && (
            <div class="mt-4">
              <h3 class="font-semibold mb-2" style="color: var(--text-primary);">Détails de l'erreur</h3>
              <pre class="bg-gray-100 dark:bg-gray-800 p-3 rounded text-sm overflow-x-auto" style="color: var(--text-primary);">{JSON.stringify(testResult.details, null, 2)}</pre>
            </div>
          )}
        </div>
      </div>

      <div class="flex gap-4">
        <a href="/admin/login" class="px-4 py-2 rounded font-medium transition-colors" style="background: var(--accent); color: white;" onmouseover="this.style.background='var(--accent-hover)'" onmouseout="this.style.background='var(--accent)'">
          Retour à la connexion
        </a>
        <a href="/admin/dashboard" class="px-4 py-2 rounded font-medium transition-colors border" style="border-color: var(--accent); color: var(--accent);" onmouseover="this.style.color='var(--accent-hover)'; this.style.borderColor='var(--accent-hover)'" onmouseout="this.style.color='var(--accent)'; this.style.borderColor='var(--accent)'">
          Dashboard
        </a>
      </div>
    </div>
  </div>
</body>
</html>