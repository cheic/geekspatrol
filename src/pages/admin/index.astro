<body>
  <div class="login-container">
    <div class="login-card">
      <div class="logo-section">
        <div class="logo">GeeksPatrol</div>
        <div class="subtitle">Administration</div>
      </div>

      <form id="loginForm" class="login-form">
        <div class="form-group">
          <label for="email" class="form-label">Adresse email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-input"
            placeholder="admin@geekspatrol.com"
            required
            autocomplete="email"
          />
        </div>

        <div class="form-group">
          <label for="password" class="form-label">Mot de passe</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-input"
            placeholder="••••••••"
            required
            autocomplete="current-password"
          />
        </div>

        <button type="submit" class="login-button" id="loginButton">
          Se connecter
        </button>
      </form>

      <div id="errorMessage" class="error-message">
        Une erreur s'est produite lors de la connexion.
      </div>

      <div class="back-link">
        <a href="/" title="Retour au site principal">
          ← Retour au site
        </a>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const loginForm = document.getElementById('loginForm') as HTMLFormElement;
      const loginButton = document.getElementById('loginButton') as HTMLButtonElement;
      const errorMessage = document.getElementById('errorMessage') as HTMLDivElement;
      const emailInput = document.getElementById('email') as HTMLInputElement;
      const passwordInput = document.getElementById('password') as HTMLInputElement;

      if (!loginForm || !loginButton || !errorMessage || !emailInput || !passwordInput) {
        return;
      }

      // Fonction pour afficher les erreurs
      const showError = (message: string) => {
        errorMessage.textContent = message;
        errorMessage.classList.add('show');
        loginButton.disabled = false;
        loginButton.textContent = 'Se connecter';
        loginButton.classList.remove('loading');
      };

      // Fonction pour masquer les erreurs
      const hideError = () => {
        errorMessage.classList.remove('show');
      };

      // Gestionnaire de soumission du formulaire
      loginForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        hideError();

        const email = emailInput.value.trim();
        const password = passwordInput.value;

        if (!email || !password) {
          showError('Veuillez remplir tous les champs.');
          return;
        }

        // Afficher l'état de chargement
        loginButton.disabled = true;
        loginButton.textContent = '';
        loginButton.classList.add('loading');

        try {
          const response = await fetch('/admin/api/auth.json', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({
              email,
              password
            })
          });

          const data = await response.json();

          if (data.success) {
            // Redirection vers le dashboard
            window.location.href = data.redirect || '/admin/dashboard';
          } else {
            showError(data.error || 'Une erreur inattendue s\'est produite.');
          }
        } catch (error) {
          showError('Erreur de connexion. Veuillez réessayer.');
        } finally {
          loginButton.disabled = false;
          loginButton.textContent = 'Se connecter';
          loginButton.classList.remove('loading');
        }
      });

      // Masquer l'erreur quand l'utilisateur commence à taper
      [emailInput, passwordInput].forEach(input => {
        input.addEventListener('input', hideError);
      });
    });
  </script>
</body>
