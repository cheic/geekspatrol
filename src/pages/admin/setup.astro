// Page pour créer un compte admin
let errorMessage = '';
let successMessage = '';

if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    const email = formData.get('email')?.toString() || '';
    const password = formData.get('password')?.toString() || '';
    const confirmPassword = formData.get('confirmPassword')?.toString() || '';

    if (!email || !password || !confirmPassword) {
      errorMessage = 'Tous les champs sont requis.';
    } else if (password !== confirmPassword) {
      errorMessage = 'Les mots de passe ne correspondent pas.';
    } else if (password.length < 6) {
      errorMessage = 'Le mot de passe doit contenir au moins 6 caractères.';
    } else {
      // Appeler l'API pour créer le compte
      const response = await fetch('/admin/api/create-admin', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ email, password }),
      });

      const result = await response.json();

      if (response.ok) {
        successMessage = 'Compte admin créé avec succès ! Vous pouvez maintenant vous connecter.';
      } else {
        errorMessage = result.error || 'Erreur lors de la création du compte.';
      }
    }
  } catch (error) {
    errorMessage = 'Une erreur inattendue s\'est produite.';
    console.error('Erreur:', error);
  }
}
