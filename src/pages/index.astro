                  Lire l'article
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
              </div>
              
              <div class="order-1 md:order-2">
                {featuredArticle.cover_image_path ? (
                  <img 
                    src={featuredArticle.cover_image_path} 
                    alt={featuredArticle.cover_image_alt || featuredArticle.title}
                    class="w-full h-64 md:h-96 object-cover rounded-2xl shadow-2xl group-hover:scale-105 transition-transform duration-300"
                  />
                ) : (
                  <div class="w-full h-64 md:h-96 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-2xl shadow-2xl flex items-center justify-center">
                    <span class="text-6xl">üì±</span>
                  </div>
                )}
              </div>
            </div>
          </a>
        </div>
      </div>
    </section>
  )}

  <!-- Publicit√© Google AdSense - Bandeau -->
  <div class="container mx-auto px-4 py-12">
    <AdSlot slot="top-banner" format="horizontal" />
  </div>

  <!-- Grille d'articles r√©cents -->
  <section class="container mx-auto px-4 py-20">
    <div class="flex justify-between items-center mb-4 mt-8">
      <h2 class="text-3xl font-bold text-slate-900 dark:text-white">
        Derniers articles
      </h2>
    </div>

    {regularArticles.length > 0 ? (
      <>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
          {regularArticles.map((article: any, index: number) => {
            // Ins√©rer une pub apr√®s chaque 6 articles
            const showAd = (index + 1) % 6 === 0;
            
            return (
              <>
                <ArticleCard 
                  article={article}
                  client:load
                />
                
                {showAd && (
                  <div class="md:col-span-2 lg:col-span-3">
                    <AdSlot slot={`feed-ad-${index}`} format="horizontal" />
                  </div>
                )}
              </>
            );
          })}
        </div>

        {/* Pagination */}
        {totalPages > 1 && (
          <nav class="flex justify-center items-center gap-2 mt-12" aria-label="Pagination">
            {/* Bouton Pr√©c√©dent */}
            {currentPage > 1 ? (
              <a
                href={`/?page=${currentPage - 1}`}
                class="px-4 py-2 rounded-lg bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 text-slate-700 dark:text-slate-300 hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors"
                aria-label="Page pr√©c√©dente"
              >
                ‚Üê Pr√©c√©dent
              </a>
            ) : (
              <span class="px-4 py-2 rounded-lg bg-slate-100 dark:bg-slate-800 border border-slate-200 dark:border-slate-700 text-slate-400 dark:text-slate-600 cursor-not-allowed">
                ‚Üê Pr√©c√©dent
              </span>
            )}

            {/* Num√©ros de page */}
            <div class="hidden sm:flex gap-2">
              {pageNumbers.map((pageNum) => (
                pageNum === '...' ? (
                  <span class="px-4 py-2 text-slate-500 dark:text-slate-400">
                    ...
                  </span>
                ) : (
                  <a
                    href={`/?page=${pageNum}`}
                    class={`px-4 py-2 rounded-lg border transition-colors ${
                      currentPage === pageNum
                        ? 'bg-[#00bcd4] border-[#00bcd4] text-white font-semibold'
                        : 'bg-white dark:bg-slate-800 border-slate-200 dark:border-slate-700 text-slate-700 dark:text-slate-300 hover:bg-slate-50 dark:hover:bg-slate-700'
                    }`}
                    aria-label={`Page ${pageNum}`}
                    aria-current={currentPage === pageNum ? 'page' : undefined}
                  >
                    {pageNum}
                  </a>
                )
              ))}
            </div>

            {/* Indicateur mobile */}
            <span class="sm:hidden px-4 py-2 text-slate-600 dark:text-slate-400">
              Page {currentPage} / {totalPages}
            </span>

            {/* Bouton Suivant */}
            {currentPage < totalPages ? (
              <a
                href={`/?page=${currentPage + 1}`}
                class="px-4 py-2 rounded-lg bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 text-slate-700 dark:text-slate-300 hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors"
                aria-label="Page suivante"
              >
                Suivant ‚Üí
              </a>
            ) : (
              <span class="px-4 py-2 rounded-lg bg-slate-100 dark:bg-slate-800 border border-slate-200 dark:border-slate-700 text-slate-400 dark:text-slate-600 cursor-not-allowed">
                Suivant ‚Üí
              </span>
            )}
          </nav>
        )}
      </>
    ) : (
      <div class="text-center py-16">
        <p class="text-slate-500 dark:text-slate-400 text-lg">
          Aucun article disponible
        </p>
      </div>
    )}
  </section>

  <!-- Publicit√© Google AdSense - Bas de page -->
  <div class="container mx-auto px-4 py-12">
    <AdSlot slot="bottom-banner" format="horizontal" />
  </div>

  <!-- CTA Section -->
  <section class="bg-gradient-to-r from-indigo-600 to-purple-600 py-16">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Ne ratez aucune actualit√© tech
      </h2>
      <p class="text-xl text-indigo-100 mb-8 max-w-2xl mx-auto">
        Suivez-nous pour rester inform√© des derni√®res tendances en technologie, mobile et IA
      </p>
      <a 
        href="/" 
        class="inline-flex items-center gap-2 px-8 py-4 bg-white text-indigo-600 font-semibold rounded-lg hover:bg-indigo-50 transition-colors"
      >
        Retour √† l'accueil
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
