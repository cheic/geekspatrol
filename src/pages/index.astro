---
import BaseLayout from '../layouts/BaseLayout.astro';
import ArticleCard from '../components/ArticleCard.tsx';
import { AdSlot } from '../components/ads/AdSlot.tsx';
import { supabase } from '../lib/supabase';

// R√©cup√©rer les articles publi√©s des 30 derniers jours
const thirtyDaysAgo = new Date();
thirtyDaysAgo.setDate(thirtyDaysAgo.getDate() - 30);

const { data: articles } = await supabase
  .from('articles')
  .select(`
    id, title, slug, excerpt, cover_image_path, cover_image_alt, 
    created_at, status,
    article_categories(category_id, category:categories(id, name, slug))
  `)
  .eq('status', 'approved')
  .gte('created_at', thirtyDaysAgo.toISOString())
  .order('created_at', { ascending: false })
  .limit(20);

// Article mis en avant (le plus r√©cent)
const featuredArticle = articles?.[0] || null;
const regularArticles = articles?.slice(1) || [];
---

<BaseLayout title="Geeks Patrol - Actualit√© Tech" description="Blog tech et actualit√© geek">
  <!-- Hero Section avec article mis en avant -->
  {featuredArticle && (
    <section class="relative overflow-hidden bg-gradient-to-br from-indigo-50 via-white to-purple-50 dark:from-slate-900 dark:via-slate-800 dark:to-indigo-950">
      <div class="container mx-auto px-4 py-12">
        <div class="max-w-6xl mx-auto">
          <a href={`/blog/${featuredArticle.slug}`} class="group">
            <div class="grid md:grid-cols-2 gap-8 items-center">
              <div class="order-2 md:order-1">
                <div class="inline-flex items-center gap-2 bg-indigo-100 dark:bg-indigo-900/30 text-indigo-700 dark:text-indigo-300 px-3 py-1 rounded-full text-sm font-medium mb-4">
                  <span class="w-2 h-2 bg-indigo-500 rounded-full animate-pulse"></span>
                  Article r√©cent
                </div>
                
                <h1 class="text-4xl md:text-5xl font-bold mb-4 text-slate-900 dark:text-white group-hover:text-indigo-600 dark:group-hover:text-indigo-400 transition-colors">
                  {featuredArticle.title}
                </h1>
                
                {featuredArticle.excerpt && (
                  <p class="text-lg text-slate-600 dark:text-slate-400 mb-6 line-clamp-3">
                    {featuredArticle.excerpt}
                  </p>
                )}

                {featuredArticle.article_categories && featuredArticle.article_categories.length > 0 && (
                  <div class="flex flex-wrap gap-2 mb-4">
                    {featuredArticle.article_categories.map((ac: any) => (
                      ac?.category && (
                        <span class="px-3 py-1 bg-indigo-100 dark:bg-indigo-900/30 text-indigo-700 dark:text-indigo-300 rounded-full text-xs font-medium">
                          {ac.category.name}
                        </span>
                      )
                    ))}
                  </div>
                )}
                
                <div class="inline-flex items-center gap-2 text-indigo-600 dark:text-indigo-400 font-semibold group-hover:gap-4 transition-all">
                  Lire l'article
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
              </div>
              
              <div class="order-1 md:order-2">
                {featuredArticle.cover_image_path ? (
                  <img 
                    src={featuredArticle.cover_image_path} 
                    alt={featuredArticle.cover_image_alt || featuredArticle.title}
                    class="w-full h-64 md:h-96 object-cover rounded-2xl shadow-2xl group-hover:scale-105 transition-transform duration-300"
                  />
                ) : (
                  <div class="w-full h-64 md:h-96 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-2xl shadow-2xl flex items-center justify-center">
                    <span class="text-6xl">üì±</span>
                  </div>
                )}
              </div>
            </div>
          </a>
        </div>
      </div>
    </section>
  )}

  <!-- Publicit√© Google AdSense - Bandeau -->
  <div class="container mx-auto px-4 py-8">
    <AdSlot slot="top-banner" format="horizontal" />
  </div>

  <!-- Grille d'articles r√©cents -->
  <section class="container mx-auto px-4 py-12">
    <h2 class="text-3xl font-bold mb-8 text-slate-900 dark:text-white">
      Derniers articles
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {regularArticles.map((article: any, index: number) => {
        // Ins√©rer une pub apr√®s chaque 6 articles
        const showAd = (index + 1) % 6 === 0;
        
        return (
          <>
            <ArticleCard 
              article={article}
              client:load
            />
            
            {showAd && (
              <div class="md:col-span-2 lg:col-span-3">
                <AdSlot slot={`feed-ad-${index}`} format="horizontal" />
              </div>
            )}
          </>
        );
      })}
    </div>
  </section>

  <!-- Publicit√© Google AdSense - Bas de page -->
  <div class="container mx-auto px-4 py-8">
    <AdSlot slot="bottom-banner" format="horizontal" />
  </div>

  <!-- CTA Section -->
  <section class="bg-gradient-to-r from-indigo-600 to-purple-600 py-16">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Ne ratez aucune actualit√© tech
      </h2>
      <p class="text-xl text-indigo-100 mb-8 max-w-2xl mx-auto">
        Suivez-nous pour rester inform√© des derni√®res tendances en technologie, mobile et IA
      </p>
      <a 
        href="/blog" 
        class="inline-flex items-center gap-2 px-8 py-4 bg-white text-indigo-600 font-semibold rounded-lg hover:bg-indigo-50 transition-colors"
      >
        Voir tous les articles
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
    </div>
  </section>
</BaseLayout>
